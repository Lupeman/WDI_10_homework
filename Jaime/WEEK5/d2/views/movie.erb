<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="row">
        <div class="col-md-6">
          <span class="table_header">Title</span></br>
          <%= @movie["title"] %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <span class="table_header">Description</span></br>
          <%= @movie["description"] %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <span class="table_header">URL</span></br>
          <%= @movie["url"] %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @url_code %>" frameborder="0" allowfullscreen></iframe>
    </div>
  </div>
</div>
